<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CrowdPlay</title>
    @Styles.Render("~/Content/cssbundle")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/crowdplay")
    @Styles.Render("~/bundles/uikit/cssbundle")
    @Scripts.Render("~/bundles/uikit/jsbundle")
    
    @RenderSection("CustomStyle", false)

</head>
<body id="bodymaster" style="width:100%;height:100%;background-size:cover;">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #00cc66; color:white;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CrowdPlay", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "color:white" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="color:white">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { style = "color:white" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="height:100vh;">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
